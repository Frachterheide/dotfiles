{
  "layer": "top",
  "position": "top",
  "height": 15,
  "spacing": 4,
  "modules-left": [
    "sway/workspaces",
  ],
  "modules-center": [
    "custom/notification"
  ],
  "modules-right": [
    "tray",
    "pulseaudio",
    "custom/weather",
    "clock",
    "custom/powermenu"
  ],
  "sway/workspaces": {
    "persistent_workspaces": {
        "1": ["HDMI-A-1"],
        "2": ["HDMI-A-1"],
        "3": ["DP-3"],
        "4": ["DP-3"],
        "5": ["DP-3"],
        "6": ["DP-3"],
        "7": ["DP-3"]
    },
	"format": "{icon}",
	"format-icons": {
		"1": "",
		"2": "",
		"3": "",
		"4": "",
		"5": "",
		"6": "",
		"7": "",
		"active": "",
        "urgent": "",
		"default": ""
	},
	"sort-by-number": true,
	"disable-scroll": true,
	"disable-click": true,
	"sort-by-number": true
},
  "clock": {
    "format": "{:%a %d.%m.%y %H:%M}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
  },
  "tray": {
    "spacing": 4
  },
  "custom/weather": {
    "exec": "zsh ~/.config/waybar/scripts/wittr.sh",
    "return-type": "json",
    "format": "{}",
    "tooltip": true,
    "interval": 900
  },
  "custom/notification": {
    	"format": "{}",
        "interval": 1,
        "on-click": "playerctl -p spotify play-pause",
        "on-scroll-up": "playerctl -p spotify previous",
        "on-scroll-down": "playerctl -p spotify next",
        "tooltip": false,
        "exec": "~/.config/waybar/scripts/notification.sh"
  },
  "custom/powermenu": {
    	"format": " ",
    	"tooltip": false,
        "on-click": "~/.config/waybar/scripts/powermenu.sh"
  },
  "pulseaudio": {
		"on-click": "pavucontrol",
		"format": "{icon}  {volume}%",
        	"format-muted": " Muted",
        	"format-icons": {
            	"headphone": "",
            	"hands-free": "",
            	"headset": "",
            	"phone": "",
            	"portable": "",
            	"car": "",
            	"default": ["", "", ""]
        }
  }
}
