* {
    border: none;
    border-radius: 0;
    font-family: RobotoSlab monokai;
    font-size: 14px;
    min-height: 0;
}

window#waybar {
    background: transparent;
    color: white;
}

tooltip {
	background: #0f0f0f;
	border-radius: 3px;
	border-width: 2px;
	border-style: solid;
	border-color: #262626;
}

#workspaces button {
    padding: 2px 5px;
    color: #f0f0f0;
}

#workspaces button.focused {
    color: #0f0f0f;
    background-color: #f38ba8;
    border-radius: 7px;
}

#workspaces button.urgent {
    color: #0f0f0f;
    background-color: #fab387;
    border-radius: 7px;
}

#workspaces, #custom-date, #custom-notification, #custom-powermenu, #clock, #pulseaudio, #network, #workspaces, #tray {
	background-color: #1e1e2e;
	padding: 2px 5px;
	margin: 2px 0px 0px 0px;
}

#workspaces, #custom-notification {
	border-radius: 7px 7px 7px 7px;
	margin-left: 5px;
	margin-right: 5px;
}

#custom-notification {
	background-color: #f38ba8;
	color: #0f0f0f;
}

#custom-date {
	color: #9ec3c4;
}

#custom-powermenu {
	color: #f38ba8;
	border-radius: 0px 7px 7px 0px;
    margin-right: 5px;
}

#clock {
    color: #cba6f7;
    
}

#network {
	color: #f9e2af;
}

#pulseaudio {
	color: #89b4fa;
}
